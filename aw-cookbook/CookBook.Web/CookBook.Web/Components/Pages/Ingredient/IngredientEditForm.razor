@using CookBook.Common.Models.Ingredient;
@rendermode InteractiveServer

<form @onsubmit="HandleSubmit">
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" @bind="ingredient.Name" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea class="form-control" @bind="ingredient.Description" required></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Image URL</label>
        <input type="text" class="form-control" @bind="ingredient.ImageUrl" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>



